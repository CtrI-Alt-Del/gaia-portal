---
import Search from "./Search.astro";
import { ArduinoCanvas } from "@/components/ArduinoCanvas";

const { data } = Astro.locals.starlightRoute.entry;
const { sidebar } = Astro.locals.starlightRoute;

// checa se é página 404
const is404 = Astro.locals.starlightRoute?.id === "404";

function getFirstHref(item: any): string | null {
  if (typeof item?.href === "string" && item.href) return item.href;
  if (item?.entries && Array.isArray(item.entries) && item.entries.length > 0) {
    return getFirstHref(item.entries[0]);
  }
  return null;
}
---

<div class="hero mx-auto max-w-6xl px-4 sm:px-6 lg:px-8 pb-32">
    <!-- coluna arduino 3D -->
    <div class="hero-visual hero-visual-animate">
      <ArduinoCanvas client:visible />
    </div>

    <div class="hero-copy hero-copy-animate">
      <p class="hero-pill">
        <span class="dot"></span>
        Projeto Gaia — Monitoramento de Estações
      </p>

      <h1 class="hero-title flex flex-col justify-center items-center">
         Monitoramento de risco
        <span class="hero-gradient">
          para escolas e comunidades
        </span>
      </h1>

      <p class="hero-subtitle text-center">
        O Gaia conecta estações meteorológicas de baixo custo, dataloggers e um portal web para transformar leituras de clima em alertas
        de risco e atividades.
      </p>

      <div class="hero-chips">
        <div class="chip">
          <span class="chip-dot" />
          <div>
            <p class="chip-title">A Dor</p>
            <p class="chip-text">
              Necessidade de um sistema ambiental acessível, fácil de operar e aplicável em   uso real.
            </p>
          </div>
        </div>

        <div class="chip">
          <span class="chip-dot" />
          <div>
            <p class="chip-title">Nossa Solução</p>
            <p class="chip-text">
              Estações meteorológicas de baixo custo integradas a um fluxo completo IoT e dashboards voltados a uso técnico e educacional.
            </p>
          </div>
        </div>

        <div class="chip">
          <span class="chip-dot" />
          <div>
            <p class="chip-title">No Painel Gaia</p>
            <p class="chip-text">
              Visualização clara dos dados, alertas automáticos e relatórios de risco que transformam medições em aprendizado.
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  @layer starlight.core {
    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .hero-copy-animate {
      animation: fadeInUp 0.8s ease-out forwards;
    }

    .hero-visual-animate {
      opacity: 0;
      animation: fadeInUp 0.8s ease-out 0.3s forwards;
    }

    .hero-layout {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 1rem;
      text-align: center;
      width: 100%;
    }

    .hero-copy {
      max-width: 56rem;
      display: flex;
      flex-direction: column;
      align-items: center;
      margin-inline: auto;
    }

    .hero-pill {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.35rem 0.8rem;
      border-radius: 999px;
      font-size: 0.75rem;
      letter-spacing: 0.04em;
      text-transform: uppercase;
      border: 1px solid color-mix(in srgb, var(--sl-color-white) 16%, transparent);
      background-color: color-mix(in srgb, var(--sl-color-gray-8) 60%, transparent);
      color: var(--sl-color-gray-3);
      margin-bottom: 1.5rem;
    }

    .hero-pill .dot {
      width: 8px;
      height: 8px;
      border-radius: 999px;
      background: linear-gradient(135deg, #22c55e, #4ade80);
      box-shadow: 0 0 0 4px rgba(34, 197, 94, 0.15);
    }

    .hero-title {
      font-size: clamp(2.6rem, 5vw, 3.6rem);
      line-height: 1.05;
      letter-spacing: -0.06em;
      color: var(--sl-color-white);
      margin-bottom: 1rem;
    }

    .hero-gradient {
      display: block;
      background-image: linear-gradient(120deg, #916de2, #b48ede, #ca9edb);
      -webkit-background-clip: text;
      background-clip: text;
      color: transparent;
    }

    .hero-subtitle {
      font-size: 1.1rem;
      color: var(--sl-color-gray-3);
      max-width: 40rem;
      margin-bottom: 3rem;
      line-height: 1.6;
    }

    .hero-chips {
      display: grid;
      gap: 0.9rem;
      margin-bottom: 2.2rem;
    }

    @media (min-width: 960px) {
      .hero-chips {
        grid-template-columns: repeat(3, minmax(0, 1fr));
      }
    }

    .chip {
      display: flex;
      align-items: flex-start;
      gap: 0.7rem;
      padding: 1.2rem;
      border-radius: 0.9rem;
      border: 1px solid color-mix(in srgb, var(--sl-color-white) 8%, transparent);
      background-color: color-mix(in srgb, var(--sl-color-black) 60%, transparent);
      text-align: left;
    }

    .chip-dot {
      width: 10px;
      height: 10px;
      border-radius: 999px;
      background: linear-gradient(135deg, #916de2, #ca9edb);
      margin-top: 3px;
    }

    .chip-title {
      font-size: 0.8rem;
      font-weight: 600;
      color: var(--sl-color-gray-1);
      margin: 0 0 2px 0;
      text-transform: uppercase;
      letter-spacing: 0.05em;
    }

    .chip-text {
      font-size: 0.85rem;
      color: var(--sl-color-gray-4);
      margin: 0;
    }

    .hero-search {
      margin-top: 0.5rem;
    }

    .search-container {
      width: 100%;
      border: 1px solid color-mix(in srgb, var(--sl-color-white) 5%, transparent);
    }

    .hero-popular {
      display: flex;
      align-items: center;
      flex-wrap: wrap;
      gap: 0.75rem;
      margin-top: 1rem;
    }

    .popular-label {
      font-size: 0.9rem;
      color: var(--sl-color-gray-3);
      margin: 0;
    }

    .popular-badges {
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
      padding: 0.4rem 0.8rem;
      border-radius: 0.9rem;
      background-color: color-mix(in srgb, var(--sl-color-white) 3%, transparent);
    }

    .badge {
      padding: 0.3rem 0.7rem;
      border-radius: 0.6rem;
      background-color: color-mix(in srgb, var(--sl-color-white) 7%, transparent);
      font-size: 0.8rem;
      transition: background-color 0.2s ease;
    }

    .badge:hover {
      background-color: color-mix(in srgb, var(--sl-color-white) 16%, transparent);
    }

    .badge-link {
      text-decoration: none;
      color: var(--sl-color-gray-1);
    }

    .hero-visual {
      width: 100%;
      max-width: 800px;
      margin-top: -4rem;
      margin-bottom: -2rem;
      margin-inline: auto;
    }

    @media (max-width: 940px) {
      .hero {
        padding-top: 6rem;
        padding-bottom: 3rem;
      }
      .hero-title {
        font-size: 2.4rem;
        line-height: 1.1;
      }
      .hero-subtitle {
        font-size: 0.95rem;
      }
    }
  }
</style>

<script>
  const iconElements = document.querySelector("[data-icon-path]");
  const heroSection = document.querySelector(".hero");
  const header = document.querySelector(".header");
  const heroBG = document.querySelector(".hero-bg") as HTMLElement;

  const totalHeight =
    (heroSection?.clientHeight || 0) + (header?.clientHeight || 0) + 24;

  if (heroBG) {
    heroBG.style.height = `${totalHeight}px`;
  }

  if (iconElements) {
    const iconPath = iconElements.getAttribute("data-icon-path");
    const img = document.createElement("img");
    img.src = `/${iconPath}` || "";
    img.alt = "icon";
    img.className =
      "hidden lg:inline-block size-20 -mb-2 rounded-2xl animate-[bounce_2s_ease-in-out_infinite]";
    iconElements.replaceWith(img);
  }
</script>
